[MASTER]
init-hook='import sys; sys.path.append("src")'
ignore=setup.py,tests

[MESSAGES CONTROL]
disable=
    too-few-public-methods,
    too-many-arguments,
    too-many-return-statements,
    wildcard-import,
    unused-wildcard-import,
    import-self,
    missing-module-docstring,
    broad-exception-caught

max-line-length=120
